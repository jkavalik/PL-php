CREATE FUNCTION translated_number(numbers, languages)
RETURNS translated_number LANGUAGE plphp AS $$
	$ret = array();
	$ret['number'] = $args[0]['id'];
	$ret['translation'] = $args[0][$args[1]['langname']];
	$ret['language'] = $args[1]['langname'];
	return $ret;
$$;
CREATE FUNCTION
